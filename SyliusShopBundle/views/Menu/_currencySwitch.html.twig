{% if currencies|length > 1 %}
    <div class="dropdown" id="sylius-currency-selector" {{ sylius_test_html_attribute('currency-selector') }}>
        <button class="btn btn-sm btn-dark text-muted dropdown-toggle sylius-active-currency" type="button" data-toggle="dropdown" {{ sylius_test_html_attribute('active-currency') }}>
            {{ active }}
        </button>
        <div class="dropdown-menu">
            {% for code in currencies %}
                {% if code is not same as(active) %}
                    <a class="dropdown-item sylius-available-currency" href="{{ path('sylius_shop_switch_currency', {'code': code}) }}" {{ sylius_test_html_attribute('available-currency') }}>
                        {{ code }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}
